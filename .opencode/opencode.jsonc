{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "Claude Sonnet 4.5",
  "autoupdate": true,
  "provider": {
    "genai-gateway": {
      "npm": "@ai-sdk/anthropic",
      "name": "GenAI Gateway",
      "options": {
        "baseURL": "https://gen-ai.prod.booking.com/anthropic/claude_code/v1/",
        "apiKey": "{env:GENAI_KEY}"
      },
      "models": {
        "claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5",
          "id": "ml-asset:static-model/claude-sonnet-4-5"
        },
        "claude-haiku-4-5": {
          "name": "Claude Haiku 4.5",
          "id": "ml-asset:static-model/claude-haiku-4-5"
        },
        "gpt-4o-mini": {
          "name": "GPT-4o-mini",
          "id": "ml-asset:static-model/gpt-4o-mini"
        }
      }
    }
  },
  "permission": {
    "skill": {
      "*": "allow",
      "dqx-*": "allow"
    }
  },
  "agent": {
    "dqx-implement": {
      "permission": {
        "skill": {
          "dqx-code-standards": "allow",
          "dqx-quality-gate": "allow",
          "dqx-conventional-commit": "allow",
          "dqx-tdd-cycle": "allow",
          "dqx-phase-commit": "allow",
          "dqx-coverage-fix": "allow"
        }
      }
    },
    "dqx-feedback": {
      "permission": {
        "skill": {
          "dqx-code-standards": "allow",
          "dqx-quality-gate": "allow",
          "dqx-conventional-commit": "allow",
          "dqx-review-priority": "allow"
        }
      }
    },
    "dqx-pr": {
      "permission": {
        "skill": {
          "dqx-quality-gate": "allow"
        }
      }
    },
    "dqx-api": {
      "permission": {
        "skill": {
          "dqx-code-standards": "allow"
        }
      }
    },
    "dqx-sql": {
      "permission": {
        "skill": {
          "dqx-code-standards": "allow"
        }
      }
    },
    "dqx-graph": {
      "permission": {
        "skill": {
          "dqx-code-standards": "allow"
        }
      }
    },
    "dqx-docs": {
      "permission": {
        "skill": {
          "dqx-code-standards": "allow"
        }
      }
    },
    "dqx-test": {
      "permission": {
        "skill": {
          "dqx-code-standards": "allow",
          "dqx-coverage-fix": "allow"
        }
      }
    }
  }
}
